\DeclareOptionBeamer{compress}{\beamer@compresstrue}
\ProcessOptionsBeamer

\mode<presentation>

% Inactive colors
\setbeamercolor{uppercolI}{fg=white,bg=gray!30}
\setbeamercolor{lowercolI}{fg=gray!30,bg=violet!5}

% Highlighted colors
\setbeamercolor{uppercolH}{fg=white,bg=red!80}
\setbeamercolor{lowercolH}{fg=black,bg=red!5}

% Active colors
\setbeamercolor{uppercolA}{fg=white,bg=violet!85}
\setbeamercolor{lowercolA}{fg=black,bg=violet!5}

\useoutertheme[section=false,subsection=false,footline=authorinstututetitle]{miniframes}
%\useinnertheme{circles}

\definecolor{beamer@blendedyellow}{RGB}{255, 255, 153}
\definecolor{beamer@blendedblue}{RGB}{41, 38, 191}
\definecolor{beamer@blendedpurple}{RGB}{29, 28, 97}

\setbeamercolor{section in head/foot}{bg=black}
